{
  "expo": {
    "name": "thrail_app",
    "slug": "thrail_app",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "thrailapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.anonymous.thrail_app"
    },
    "web": {
      "output": "static"
    },
    "plugins": [
      "expo-router",
      // [
      //   "expo-splash-screen",
      //   {
      //     "image": "./assets/images/splash-icon.png",
      //     "imageWidth": 200,
      //     "resizeMode": "contain",
      //     "backgroundColor": "#ffffff",
      //     "dark": {
      //       "backgroundColor": "#000000"
      //     }
      //   }
      // ],
      "expo-font",
      [
        "@maplibre/maplibre-react-native",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Thrail to use your location to show you on the map."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
